<p id="notice"><%= notice %></p>

<div class="fighter-avatar">
  <%= image_tag(@fighter.avatar, size: "200x200") if @fighter.avatar.attached? %>
</div>
<div class="fighter-informations content">
  <div class="fighter-data">
    <div class="fighter">
      <p><strong>Combattant:</strong></p>
      <table>
        <thead>
          <tr>
            <th>Nom</th>
            <th>Sant√©</th>
            <th>Attaque</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @fighter.name %></td>
            <td><%= @fighter.health %></td>
            <td><%= @fighter.attack %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="fighter-equipment">
      <p><strong>Equipement:</strong></p>
      <table>
        <thead>
          <tr>
            <th>Nom</th>
            <th>Attaque</th>
            <th>Armure</th>
          </tr>
        </thead>
        <% @fighter.equipments.each do |equipment| %>
          <tbody>
            <td><%= equipment.name %></td>
            <td><%= equipment.attack %></td>
            <td><%= equipment.armor %></td>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
  <% if current_user %>
    <% if current_user.fighter == @fighter %>
      <%= link_to 'Editer', edit_fighter_path(@fighter) %> |
    <% end%>
  <% end %>
  <%= link_to 'Retour', fighters_path%>
</div>