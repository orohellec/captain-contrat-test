<p id="notice"><%= notice %></p>

<p>
  <%= image_tag(@fighter.avatar) if @fighter.avatar.attached? %>
</p>

<p>
  <strong>Name:</strong>
  <%= @fighter.name %>
</p>

<p>
  <strong>Health:</strong>
  <%= @fighter.health %>
</p>

<p>
  <strong>Attack:</strong>
  <%= @fighter.attack %>
</p>

<p><strong>Equipement:</strong></p>
<% @fighter.equipments.each do |equipment| %>
  <p><%= equipment.name %></p>
  <p><%= equipment.attack %></p>
  <p><%= equipment.armor %></p>
<% end %>

<% if current_user %>
  <% if current_user.fighter == @fighter %>
    <%= link_to 'Edit', edit_fighter_path(@fighter) %> |
  <% end%>
<% end %>
<%= link_to 'Back', fighters_path %>
