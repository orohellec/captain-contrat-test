<div class="navbar">
  <div class="navbar-left">
    <%= link_to 'Arène', root_path, class: "navbar-link" %>
    <%= link_to 'Combattants', fighters_path, class: "navbar-link"%>
    <%= link_to 'Palmarès', fighters_ranking_path, class: "navbar-link" %>
  </div>
  <div class="navbar-right">
    <% if !current_user %>
      <%= link_to 'Inscription', new_user_registration_path, class: "navbar-link" %>
      <%= link_to 'Se connecter', new_user_session_path, class: "navbar-link" %>
    <% else %>
      <% if current_user.fighter %>
        <%= link_to 'Mon combattant', fighter_path(id: current_user.fighter), class: "navbar-link" %>
        <% if current_user.fighter.last_fight %>
          <%= link_to 'Dernier combat', fight_result_path(id: current_user.fighter.last_fight), class: "navbar-link" %>
        <% end %>
        <%= link_to 'Historique de mon combattant', fighter_history_path, class: "navbar-link" %>
      <% else %>
        <%= link_to "Créer mon combattant", new_fighter_path, class: "navbar-link" %>
      <% end %>
      <%= link_to 'Se déconnecter', destroy_user_session_path, method: :delete, class: "navbar-link" %>
    <% end %>
  </div>
</div>